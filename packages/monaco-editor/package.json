{
  "name": "@kie-tooling-core/monaco-editor",
  "version": "0.0.2",
  "description": "Single-file build of monaco-editor.",
  "main": "dist/standalone/monaco.min.js",
  "types": "dist/standalone/monaco.min.d.ts",
  "license": "MIT",
  "files": [
    "dist/standalone"
  ],
  "scripts": {
    "lint": "run-script-if --env KOGITO_TOOLING_BUILD_lint --true-if-empty --then 'yarn eslint ./src --ext .ts,.tsx'",
    "test": "run-script-if --env KOGITO_TOOLING_BUILD_test --true-if-empty --then 'jest --silent --verbose --passWithNoTests'",
    "build:dev": "rimraf dist && webpack --mode development",
    "build:prod": "rimraf dist && webpack --mode production"
  },
  "devDependencies": {
    "css-loader": "^5.2.4",
    "style-loader": "^2.0.0",
    "ts-loader": "^9.2.2",
    "url-loader": "^4.1.1",
    "webpack": "^5.36.2",
    "webpack-cli": "^4.6.0"
  },
  "dependencies": {
    "monaco-editor": "^0.23.0"
  },
  "keywords": [
    "monaco"
  ]
}
