{
  "name": "@kie-tooling-core/editor",
  "version": "0.0.3",
  "description": "",
  "license": "Apache-2.0",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/kiegroup/kie-tooling-core.git"
  },
  "dependencies": {
    "@kie-tooling-core/backend": "0.0.3",
    "@kie-tooling-core/envelope": "0.0.3",
    "@kie-tooling-core/envelope-bus": "0.0.3",
    "@kie-tooling-core/guided-tour": "0.0.3",
    "@kie-tooling-core/i18n": "0.0.3",
    "@kie-tooling-core/keyboard-shortcuts": "0.0.3",
    "@kie-tooling-core/notifications": "0.0.3",
    "@kie-tooling-core/workspace": "0.0.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "scripts": {
    "lint": "run-script-if --env KOGITO_TOOLING_BUILD_lint --true-if-empty --then 'yarn eslint ./src --ext .ts,.tsx'",
    "test": "run-script-if --env KOGITO_TOOLING_BUILD_test --true-if-empty --then 'jest --silent --verbose'",
    "copy:css": "copyfiles -u 1 src/**/*.{sass,scss,css} dist/",
    "build:dev": "rimraf dist && yarn copy:css && tsc -p tsconfig.dev.json",
    "build:prod": "yarn lint && rimraf dist && yarn copy:css && tsc -p tsconfig.prod.json && yarn test"
  },
  "babel": {
    "presets": [
      [
        "@babel/env",
        {
          "targets": {
            "node": "current"
          }
        }
      ],
      "@babel/react"
    ]
  }
}
