{
  "name": "@kie-tooling-core/vscode-extension",
  "displayName": "KIE :: Kogito Editors",
  "description": "",
  "version": "0.10.0",
  "license": "Apache-2.0",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/kiegroup/kie-tooling-core.git"
  },
  "publisher": "kie-group",
  "scripts": {
    "compile": "webpack",
    "watch": "webpack",
    "lint": "run-script-if --env KOGITO_TOOLING_BUILD_lint --true-if-empty --then 'yarn eslint ./src --ext .ts,.tsx'",
    "test": "run-script-if --env KOGITO_TOOLING_BUILD_test --true-if-empty --then 'jest --silent --verbose'",
    "build:dev": "rimraf dist && tsc -p tsconfig.dev.json",
    "build:prod": "rimraf dist && yarn lint && tsc -p tsconfig.prod.json && yarn test"
  },
  "dependencies": {
    "@kie-tooling-core/backend": "0.10.0",
    "@kie-tooling-core/editor": "0.10.0",
    "@kie-tooling-core/i18n": "0.10.0",
    "@kie-tooling-core/keyboard-shortcuts": "0.10.0",
    "@kie-tooling-core/workspace": "0.10.0",
    "minimatch": "^3.0.4"
  }
}
