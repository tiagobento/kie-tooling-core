{
  "name": "@kie-tooling-core/guided-tour",
  "version": "0.0.16",
  "description": "Guided Tour component",
  "license": "Apache-2.0",
  "source": "src/index.tsx",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "lint": "run-script-if --env KOGITO_TOOLING_BUILD_lint --true-if-empty --then \"yarn eslint ./src --ext .ts,.tsx\"",
    "test": "run-script-if --env KOGITO_TOOLING_BUILD_test --true-if-empty --then \"jest --silent --verbose --passWithNoTests\"",
    "copy:css": "copyfiles -u 1 src/**/*.{sass,scss,css} dist/",
    "build:dev": "rimraf dist && yarn copy:css && tsc -p tsconfig.dev.json",
    "build:prod": "yarn lint && rimraf dist && yarn copy:css && tsc -p tsconfig.prod.json && yarn test"
  },
  "dependencies": {
    "@kie-tooling-core/envelope-bus": "0.0.16",
    "@kie-tooling-core/i18n": "0.0.16",
    "@kie-tooling-core/patternfly-base": "0.0.16",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "presets": [
    [
      "@babel/env",
      {
        "targets": {
          "node": "current"
        }
      }
    ],
    "@babel/react"
  ]
}
